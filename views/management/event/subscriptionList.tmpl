{{ $css := list "/static/css/select2.css" "/static/css/style.default.table.css"}}
{{ $js := list "/static/js/select2.min.js"}}
{{ $m := map }}
{{ template "header.tmpl" addToMap "css" $css $m | addToMap "js" $js | addToMap "ctx" . }}


<div class="pageheader">
    <h2><i class="fa fa-table"></i>订阅管理列表</h2>
</div>

<div class="contentpanel">
    <div class="panel panel-default">

        {{template "alert.tmpl" .}}

        <div class="panel-body">
            <h3 class="panel-title">查询</h3>
            <form class="form-horizontal form-bordered" action="" method="get">
                <div class="form-group">
                    <label class="col-sm-3 control-label">订阅者:<span class="asterisk"></span></label>
                    <div class="col-sm-5">
                        <select class="select2" name="subscriber_key" >
                            <option value="">-全部-</option>
                            {{range $_,$subscriber :=.subscribers}}
                            <option {{if eq $subscriber.SubscriberKey $.subscriberKey}}selected="true"{{end}}
                                    value="{{$subscriber.SubscriberKey}}">{{$subscriber.SubscriberKey}}({{$subscriber.SubscriberName}})</option>
                            {{end}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">消息分类:<span class="asterisk"></span></label>
                    <div class="col-sm-5">
                        <select class="select2" name="class_key">
                            <option value="">-全部-</option>
                            {{range $_,$sub :=.messageClasses}}
                            <option {{if eq $sub.ClassKey $.classKey}}selected="true"{{end}}
                                    value="{{$sub.ClassKey}}">{{$sub.ClassKey}}({{$sub.ClassName}})</option>
                            {{end}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-sm-offset-3">
                        <button class="btn btn-primary">查询</button>
                        <button type="reset" class="btn btn-default">重置</button>
                    </div>
                </div>
            </form>

        </div>


        <div class="panel-footer">
            <div class="table-responsive">
                <div>
                    {{ template "perPageNums.tmpl" .}}
                </div>
                <div>
                    {{ template "paginator.tmpl" .}}
                </div>
                <table class="table table-striped table-layout" id="dataTable">
                    <thead>
                    <tr>
                        <th>订阅ID</th>
                        <th>订阅者</th>
                        <th>消息分类</th>
                        <th>接收消息的地址</th>
                        <th>状态</th>
                        <th>超时时间</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{range $_,$subscription :=.data}}
                    <tr class="odd gradeX">
                        <td class="table-min-width">{{$subscription.SubscriptionId}}</td>
                        <td>{{$subscription.SubscriberName}}</td>
                        <td>{{$subscription.ClassName}}</td>
                        <td class="table-word-break">{{$subscription.ReceptionChannel}}</td>
                        <td class="table-sm-min-width">{{if eq $subscription.Status 0}}正常{{else}}已经取消{{end}}</td>
                        <td class="table-lg-min-width">{{$subscription.Timeout}}</td>
                        <td>{{timeFormat $subscription.SubscribeTime}}</td>
                        <td class="table-action table-operate">
                            <a href="/Event/Subscription/update?id={{$subscription.SubscriptionId}}" ><i class="fa fa-pencil"></i></a>
                            <a href="/Event/Subscription/delete?id={{$subscription.SubscriptionId}}" class="delete-row delete-btn"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    {{end}}
                    </tbody>
                </table>
                <div>
                    {{ template "paginator.tmpl" .}}
                </div>
            </div><!-- table-responsive -->

        </div><!-- panel-body -->
    </div><!-- panel -->

</div><!-- contentpanel -->

<script>
    jQuery(document).ready(function() {

        // Select2
        jQuery(".select2").select2({
            width: '100%'
        });

        // Delete row in a table
        jQuery('.delete-row').click(function(){
            var c = confirm("确认删除?");
            if(c) {
                jQuery(this).closest('tr').fadeOut(function(){
                    jQuery(this).remove();
                });
                return true;
            }else {
                return false;
            }
        });

    });
</script>


{{template "footer.tmpl" .}}