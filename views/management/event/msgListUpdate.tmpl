{{ $m := map }}
{{ template "header.tmpl" addToMap "ctx" . $m }}

<div class="pageheader">
    <h2><i class="fa fa-table"></i> 更新消息分类 </h2>
</div>

<div class="contentpanel">

    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="panel-title">修改</h3>
            <form class="form-horizontal form-bordered" action="" method="post">
                {{if .data}}
                <input type="hidden" name="id" value="{{.data.ClassId}}">
                <div class="form-group">
                    <label class="col-sm-3 control-label">分类名称 <span class="asterisk">*</span></label>
                    <div class="col-sm-5">
                        <input type="text" name="className" class="form-control" value="{{.data.ClassKey}}" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">分类key <span class="asterisk">*</span></label>
                    <div class="col-sm-5">
                        <input type="text" name="classKey" class="form-control" value="{{.data.ClassName}}" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">备注 <span class="asterisk"></span></label>
                    <div class="col-sm-5">
                        <input type="text" name="comment" class="form-control" value="{{.data.Comment}}" />
                    </div>
                </div>
                {{else}}
                <div class="form-group" ><h2>获取修改数据失败</h2></div>
                {{end}}

                <div class="form-group">
                    <div class="col-sm-5 col-sm-offset-3">
                        <button class="btn btn-primary">提交</button>
                    </div>
                </div>
            </form>

        </div>
    </div><!-- panel -->

</div><!-- contentpanel -->


{{template "footer.tmpl" .}}
