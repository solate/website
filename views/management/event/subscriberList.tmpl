{{ $css := list "/static/css/select2.css" "/static/css/style.default.table.css"}}
{{ $js := list "/static/js/select2.min.js"}}
{{ $m := map }}
{{ template "header.tmpl" addToMap "css" $css $m | addToMap "js" $js | addToMap "ctx" . }}


<div class="pageheader">
    <h2><i class="fa fa-table"></i> 订阅者管理 </h2>
</div>

<div class="contentpanel">
    <div class="panel panel-default">

        {{template "alert.tmpl" .}}

        <div class="panel-body">
            <h3 class="panel-title">查询</h3>
            <form class="form-horizontal form-bordered" action="" method="get">
                <div class="form-group">
                    <label class="col-sm-3 control-label">订阅者key:<span class="asterisk"></span></label>
                    <div class="col-sm-5">
                        <input type="text" name="subscriber_key" class="form-control" value="{{.query.subscriber_key}}" placeholder="请填写订阅者key..."  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">订阅者名称:<span class="asterisk"></span></label>
                    <div class="col-sm-5">
                        <input type="text" name="subscriber_name" class="form-control" value="{{.query.subscriber_name}}" placeholder="请填写订阅者名称..."  />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-sm-offset-3">
                        <button class="btn btn-primary">查询</button>
                    </div>
                </div>
            </form>

        </div>
        <div class="panel-footer">
            <div class="table-responsive">
                <div>
                    {{ template "perPageNums.tmpl" .}}
                </div>
                <div>
                    {{ template "paginator.tmpl" .}}
                </div>
                <table class="table table-striped table-layout" id="dataTable">
                    <thead>
                    <tr>
                        <th>订阅者ID</th>
                        <th>订阅者名称</th>
                        <th>订阅者键</th>
                        <th>订阅者私钥</th>
                        <th>备注</th>
                        <th>创建时间</th>
                        <th>状态</th>
                        <th>允许发送的消息类型</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{range $_,$subscriber :=.data}}
                    <tr class="odd gradeX">
                        <td class="table-lg-min-width">{{$subscriber.SubscriberId}}</td>
                        <td class="table-width">{{$subscriber.SubscriberName}}</td>
                        <td class="table-width">{{$subscriber.SubscriberKey}}</td>
                        <td class="table-width">{{$subscriber.SecretKey}}</td>
                        <td class="table-width">{{$subscriber.Comment}}</td>
                        <td>{{timeFormat $subscriber.RegisterTime}}</td>
                        <td class="table-sm-min-width">{{$subscriber.Status}}</td>
                        <td class="table-word-break">{{$subscriber.AllowedMessageClassToSend}}</td>
                        <td class="table-action table-operate">
                            <a href="/Event/Subscriber/update?id={{$subscriber.SubscriberId}}" ><i class="fa fa-pencil"></i></a>
                            <a href="/Event/Subscriber/delete?id={{$subscriber.SubscriberId}}" class="delete-row delete-btn"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    {{end}}
                    </tbody>
                </table>
                <div>
                    {{ template "paginator.tmpl" .}}
                </div>
            </div><!-- table-responsive -->

        </div><!-- panel-body -->
    </div><!-- panel -->

</div><!-- contentpanel -->

<script>
    jQuery(document).ready(function() {

        // Delete row in a table
        jQuery('.delete-row').click(function(){
            var c = confirm("确认删除?");
            if(c) {
                jQuery(this).closest('tr').fadeOut(function(){
                    jQuery(this).remove();
                });
                return true;
            }else {
                return false;
            }
        });

    });
</script>


{{template "footer.tmpl" .}}